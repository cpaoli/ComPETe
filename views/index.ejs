<% include partials/header %>

<div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To ComPETe!</h1>
             <p>Share the picture of your adorable pet!</p>
             <p>
                <a class="btn btn-primary btn-large" href="/pets/new">Add new Pet</a>
             </p>
         </div>
     </header>
     
    <div class="row text-center content">
        <% pet.forEach(function (e){%>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                   <img id = "griglia" src="<%= e.image %>" >
                   <div class="caption">
                       <h4><%= e.name %></h4>
                   </div>
                   <p>
                       <a href="/pets/<%= e._id %>" class="btn btn-primary">More Info</a>
                   </p>
                   <a href="/pets/<%= e._id %>/comment/new"><button>Add a Comment</button></a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>